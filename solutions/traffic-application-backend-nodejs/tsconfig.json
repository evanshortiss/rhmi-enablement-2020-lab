{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ]
}

